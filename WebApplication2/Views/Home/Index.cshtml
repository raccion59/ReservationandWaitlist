@model List<WebApplication2.Models.Business>
@{
	Random rnd = new Random();
    ViewData["Title"] = "Home Page";
}


<!-- Start slides -->
<div class="slider">
	<div class="cover">
		<div class="sub-header">Welcome to</div>
		<h1 class="head">Reservado</h1>
		<div class="divider center"></div>
		<p class="m-b-40 head-p">Find your table for any occasion</p>

		<form class="flex-form">
			<input type="number" id="booktable" class="form-control form-control-lg custom-form-control"
				   placeholder="Guests" max="20" min="0">
			<input type="time" id="booktable" class="form-control form-control-lg custom-form-control"
				   placeholder="time">
			<input type="date" id="booktable" class="form-control form-control-lg custom-form-control"
				   placeholder="12/12/12">

			<label class="location-icon" for="from">
				<img class="icon" src="images/location.png" alt="location">
			</label>
			
			<input type="search" placeholder="Restaurant, Cuisine, or Location" id="booktable"
				   class="form-control form-control-lg custom-form-control sbooktable">
			<input type="hidden"  id="selectedB">
			<input type="submit" value="Let's Go" id="booktable" style="color: #fff;"
				   class="form-control form-control-lg custom-form-control go-detail">
				   

		</form>

	</div>

</div>
<!-- End slides -->
<!-- Start Menu -->
<div class="menu-box">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="heading-title text-center">
					<h2>Restaurant & Cafe</h2>
					<p>Available for now</p>
				</div>
			</div>
		</div>

		<div class="row inner-menu-box">
			<div class="col-3 restaurant-filter">
				<div class="filter-head">
					<i class="filter-icon"></i>
					Filter
					<span class="bordered-text reset-filter" id="resetFilter">Reset Filters</span>
				</div>
				<div class="filter-group">
					<div class="group-head">
						<i class="feature-icon icon-location"></i>Locations
						<i class="fa fa-angle-up" aria-expanded="true" data-toggle="collapse"
						   data-target="#filterLocationContainer"></i>
						<i class="fa fa-angle-down" aria-expanded="true" data-toggle="collapse"
						   data-target="#filterLocationContainer"></i>
					</div>
					<div class="filter-list collapse in" id="filterLocationContainer" aria-expanded="true"
						 data-more="6" data-query-key="lokasyonlar">
						<ul>
							<li>
								<label class="icheckbox-label rezervin-icheck">
									<input type="checkbox" name="" value="all" class="filter-icheck"
										   data-filter="location">
									<span>All</span>
									<span class="remove">Remove</span>
								</label>
							</li>

							<li class="">
								<label class="icheckbox-label rezervin-icheck">
									<input type="checkbox" name="" value="Beşiktaş" class="filter-icheck"
										   data-filter="location" data-slug="besiktas">
									<span> Beşiktaş</span>
									<span class="remove">Remove</span>
								</label>
							</li>
							<li class="">
								<label class="icheckbox-label rezervin-icheck">
									<input type="checkbox" name="" value="Kuruçeşme" class="filter-icheck"
										   data-filter="location" data-slug="kuruscesme">
									<span> Kuruçeşme</span>
									<span class="remove">Remove</span>
								</label>
							</li>
							<li class="">
								<label class="icheckbox-label rezervin-icheck">
									<input type="checkbox" name="" value="Kadıköy" class="filter-icheck"
										   data-filter="location" data-slug="kadiköy">
									<span> Kadıköy</span>
									<span class="remove">Remove</span>
								</label>
							</li>
							<li class="">
								<label class="icheckbox-label rezervin-icheck">
									<input type="checkbox" name="" value="Sultanahmet" class="filter-icheck"
										   data-filter="location" data-slug="sultanahmet">
									<span> Sultanahmet</span>
									<span class="remove">Remove</span>
								</label>
							</li>

						</ul>

						<span class="bordered-text more">All locations</span>
						<span class="bordered-text less">Show more</span>
					</div>
					<div class="filter-group">
